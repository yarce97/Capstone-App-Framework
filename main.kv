WindowManager:
    LoginWindow:
    RelationshipPage
    GenerateConnection
    RecieveInvitation

<Button>:
	color:0,0,0,1
	size_hint: 0.5,0.1

<LoginWindow>:
    name: "main"
	walletName: walletName
	passphrase: passphrase
	patient: chk_patient
	doctor: chk_doctor
	state: chk_state
	FloatLayout:
		canvas:
			Color:
				rgb: [0.37,0.1,0.59,1] #purple
		    Rectangle:
			    pos: self.pos
			    size: self.size
		Label:
			text: "MedIC Patient Portal"
			pos_hint: {"center_x":0.5,"center_y":0.9}
			font_size: (root.width**2+ root.height**2)/12**4
			color: (0.97,0.85,0.07,1)
			bold: True
		Label:
			text: "Wallet Name"
			pos_hint: {"center_x":0.5,"center_y":0.80}
			font_size: (root.width**2+ root.height**2)/12**4
		TextInput:
			id: walletName
			font_size: (root.width**2+ root.height**2)/12**4
			multiline: False
			pos_hint: {"center_x":0.5,"center_y":0.72}
			size_hint: 0.5, 0.085
		Label:
			text: "Passphrase"
			pos_hint: {"center_x":0.5,"center_y":0.60}
			font_size: (root.width**2+ root.height**2)/12**4
		TextInput:
			id: passphrase
			font_size: (root.width**2+ root.height**2)/12**4
			password: True
			multiline: False
			pos_hint: {"center_x":0.5,"center_y":0.52}
			size_hint: 0.5, 0.09
	    GridLayout:
	        rows: 3
	        cols: 2
		    pos_hint: {"center_x": 0.5, "center_y":0.4}
		    size_hint: 1, 0.1
		    Label:
		        text: 'Patient'
		    CheckBox:
		        group: 'user'
		        id: chk_patient
		    Label:
		        text: 'Doctor'
		    CheckBox:
		        group: 'user'
		        id: chk_doctor
		    Label:
		        text: 'State/Hospital'
		    CheckBox:
		        group: 'user'
		        id: chk_state
		ImageButton:
		    source: "icons/open_create_button.png"
			id: btn
			pos_hint: {"center_x":0.5,"center_y":0.20}
			size_hint: 0.5, 0.4
			on_release:
			    root.manager.transition.direction = "left"
			    root.login_btn()


<UserPage>:
    name: "userPage"
    n :name
    FloatLayout:
        canvas:
            Color:
				rgb: [0.97,0.85,0.07,1]
			Rectangle:
				pos: self.pos
				size: self.size
		GridLayout:
            canvas:
			    Color:
				    rgb: [0.97,0.85,0.07,1]
			    Rectangle:
				    pos: self.pos
				    size: self.size
		    rows: 1
		    pos_hint: {"top": 1, "left":1}
		    size_hint: 1, 0.1
            Button:
                text: "Logout"
                pos_hint:{"center_x":0.1,"center_y":0.95}
                size_hint: 0.2,0.1
                background_color: (0,0,0,1)
                color: (1,1,1,1)
                on_release:
                    root.manager.transition.direction = "right"
                    root.logout()
		    Label:
                id: name
                color: (0,0,0,1)
                bold: True
                pos_hint:{"center_x":0.45, "center_y": 0.95}
                size_hint: 0.2, 0.1
                text: "Agent: "
		GridLayout:
            canvas:
			    Color:
				    rgb: [0.37,0.1,0.59,1]
			    Rectangle:
				    pos: self.pos
				    size: self.size
		    rows: 4
		    pos_hint: {"top": 0.9, "left":1}
		    size_hint: 1, 0.8
            Button:
		        text: "SCHEMAS"
		        bold: True
		        color: (1,1,1,1)
                pos_hint:{"center_x":0.1,"center_y":0.70}
                size_hint: 0.5,0.1
                background_color: (0.37,0.1,0.59, 1.0)
                background_normal : ""
                on_release:
                    root.manager.transition.direction = "right"
                    root.schemas()
		    Button:
		        text: "RELATIONSHIPS"
		        bold: True
		        color: (1,1,1,1)
                pos_hint:{"center_x":0.1,"center_y":0.60}
                size_hint: 0.5,0.1
                background_color: (0.37,0.1,0.59, 1.0)
                background_normal : ""
                on_release:
                    root.manager.transition.direction = "right"
                    root.relationships()
		    Button:
		        text: "CREDENTIALS"
		        bold: True
		        color: (1,1,1,1)
                pos_hint:{"center_x":0.1,"center_y":0.40}
                size_hint: 0.5,0.1
                background_color: (0.37,0.1,0.59, 1.0)
                background_normal : ""
                on_release:
                    root.manager.transition.direction = "right"
                    root.credentials()
		    Button:
		        text: "PROVE"
		        bold: True
		        color: (1,1,1,1)
                pos_hint:{"center_x":0.1,"center_y":0.30}
                size_hint: 0.5, 0.1
                background_color: (0.37,0.1,0.59, 1.0)
                background_normal : ""
                on_release:
                    root.manager.transition.direction = "right"
                    root.prove()
        GridLayout:
            canvas:
			    Color:
				    rgb: [0.37,0.1,0.59,1]
			    Rectangle:
				    pos: self.pos
				    size: self.size
		    rows: 1
		    pos_hint: {"top": 0.1, "left":1}
		    size_hint: 1, 0.1
            Button:
                text: "Connect to Server"
                pos_hint:{"center_x":0.1,"center_y":0.95}
                size_hint: 0.2,0.1
                background_color: (0,0,0,1)
                color: (1,1,1,1)
                on_release:
                    root.manager.transition.direction = "up"
                    root.connect_server()
            Button:
                text: "Remove Wallet"
                pos_hint:{"center_x":0.05,"center_y":0.95}
                size_hint: 0.2,0.1
                background_color: (0,0,0,1)
                color: (1,1,1,1)
